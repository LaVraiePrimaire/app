- var closed = proposal.closed
.inner-container
  - var learnMore = config.learnMoreUrl
  - if (learnMore)
    div.alert.alert-warning.alert-dismissable.system-alert
      button(type="button", class="close", data-dismiss="alert", aria-hidden="true")
      span #{t('proposal-article.article.alert.text')}&nbsp;&nbsp;
      a.alert-link(href=learnMore, target="_blank") #{t('proposal-article.article.alert.learn-more')}


  article.proposal.commentable-container

    h1=proposal.fullName
    - if (!proposal.acceptedNomination)
      h2.accepted-nomination= t('proposal-article.not-accepted')
    - if (proposal.pictureUrl)
        img.picture(src=proposal.pictureUrl)

      .clauses
        - var clauses = proposal.clauses
        each clause, i in clauses
          - var classes = ['clause']
          - classes.push(clause.empty ? 'hide' : 'commentable-section')
          !=toHTML(clause, { className: classes, iframeResponsive: true })

    .entry-content
      .charte
        .clause
          h3=t('charte.clause1')
          p=proposal.whatIsLife
        .clause
          h3=t('charte.clause2')
          p=proposal.secondChartePos
        .clause
          h3=t('charte.clause3')
          p=proposal.thirdChartePos
        .clause
          h3=t('charte.clause4')
          p=proposal.fourthChartePos
        .clause
          h3=t('charte.clause5')
          p=proposal.fifthChartePos

    //- Article links
    - if (proposal.links && proposal.links.length)
      .links
        h5=t('common.more-information')
        - each link in proposal.links
          p
            a(target="_blank", href=link.url)=link.type

    //- Article participants
    .participants(class=proposal.votable ? '' : 'hide')
      //- Rendered by participants view

    //- Article share links
    - var text = config.tweetText || (proposal.fullName + ' en La Vraie Primaire')
    .share-links
      a(target="_blank", href="http://www.facebook.com/sharer.php?u=#{baseUrl}/candidate/#{proposal.id}").flaticon.social.facebook
      a(target="_blank", href="http://twitter.com/share?text=#{text}&url=#{baseUrl}/candidate/#{proposal.id}").flaticon.social.twitter
