/* Vars
-------------------------------------------------- */
content_width = 580px
/* Comments
-------------------------------------------------- */
.comments
  background #f9f9f9
  padding-top 50px
  padding-bottom 50px

  .lock-spinner
      background-color #ecf0f1

  .inner-container
    position relative
    margin auto
    max-width content_width
    min-height 5em

    form.comment-form
      overflow hidden

      textarea
        width 100%
        max-width 540px
        padding 2%
      .form-submit
        background-color #211E16
        color #ecf0f1
      .form-messages
        color D3091D
        display block
      span.error
        color D3091D
        display block

    .new-comment
      background-color #ecf0f1
      border 1px dashed #ddd
      font-weight normal
      color #999
      &:hover
        color #777
        border-color #ccc
      .icon-plus
        margin-right 6px

@import './comments'
