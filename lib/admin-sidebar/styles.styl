.nav-pills
  li.active
    a
      color: #ecf0f1
      background-color:#63666A
      &:hover
        background-color:#4E5458

ul.admin-menu
  margin 0
  margin-bottom 20px
  padding 0
  text-transform uppercase
  list-style none

  li.heading
    padding 40px 0 10px 20px
    color #C4C4C4
    font-weight bold
    font-size 14px
    line-height 20px

  li
    a
      width 100%
      display inline-block
      text-decoration none
      color #1A5CE5
      font-size 12px
      font-weight bold
      line-height 15px
      padding 11px 20px 8px
